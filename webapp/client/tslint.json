{
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended",
      "tslint-config-airbnb",
      "tslint-react",
      "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
      "object-shorthand-properties-first": false,
      "max-classes-per-file": false,
      "prefer-array-literal": [true, { "allow-type-parameters": true }],
      "jsx-no-lambda": false,
      "no-console": false,
      "import-name": [false, {
        "react": "React",
        "react-dom": "ReactDOM"
      }],
      "object-curly-spacing": ["warning", "never"],
      "function-name": [
        true,
        {
          "function-regex": "^[a-zA-Z$][\\w\\d]+$",
          "method-regex": "^[a-z$][\\w\\d]+$",
          "private-method-regex": "^[a-zA-Z$][\\w\\d]+$"
        }
      ],
      "max-line-length": [
        true,
        {
          "limit": 140,
          "ignore-pattern": "^import |^export {(.*?)}|\\s*it(.+?)|\\s*describe(.+?)",
          "check-strings": true,
          "check-regex": true
        }
      ],
      "variable-name": {
        "options": [
          "check-format",
          "allow-pascal-case"
        ]
      },
      "object-literal-sort-keys": [
        false,
        "shorthand-first"
      ],
      "ordered-imports": [
        true,
        {
          "named-imports-order": "any"
        }
      ]
    }
}